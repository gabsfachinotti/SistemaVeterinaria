<!DOCTYPE html>
<html>
<head>
<style>
    thead tr {
        background: lightsteelblue;
    }

    .modalinput{
        width:100%;
        display:inline-flex;
    }

    .modallabel{
        width: 20%;
        margin-left: 10%
    }

    .modal-header {
        width: 100%;
        display: inline-flex;
    }
</style>
<meta http-equiv="Content-Type" content="text/html; charset=utf-8"/>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - Sistema Veterinaria</title>
    @Styles.Render("~/Styles/css")
    @Scripts.Render("~/bundles/modernizr")

</head>
<body background="~/Content/Images/BACKGROUND-TOP.jpg">
<nav class="navbar navbar-inverse navbar-fixed-top" style="background-color: #034381">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a href="@Url.Action("Index","Home")" class="navbar-brand" style="color:white"><span class="glyphicon glyphicon-home" aria-hidden="true"></span></a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="@Url.Action("Index","Owners")" style="color:white;font-weight:bold">Dueños</a></li>
                    <li><a href="@Url.Action("Index","Pets")" style="color:white;font-weight:bold">Pacientes</a></li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-weight:bold;color:white">Vacunas<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li><a href="@Url.Action("Index","Vaccines")">Notificaciones Futuras</a></li>                            
                            <li class="divider"></li>
                            <li><a href="@Url.Action("Vaccinated","Vaccines")">Vacunas Realizadas</a></li>
                            <li class="divider"></li>
                            <li><a href="@Url.Action("DailyNotification","Vaccines")">Notificación Diaria</a></li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-weight:bold;color:white">Cirugías<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Notificaciones de Cirugías", "Index", "Surgeries")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Notificación Diaria", "DailyNotification", "Surgeries")</li>
                        </ul>
                    </li>

                    <li class="dropdown">
                        <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false" style="font-weight:bold;color:white">Baños<span class="caret"></span></a>
                        <ul class="dropdown-menu" role="menu">
                            <li>@Html.ActionLink("Notificaciones de Baños", "Index", "Showers")</li>
                            <li class="divider"></li>
                            <li>@Html.ActionLink("Notificación Diaria", "DailyNotification", "Showers")</li>
                        </ul>
                    </li>

                </ul>
                @*@Html.Partial("_LoginPartial")*@
            </div>
        </div>
    </nav>
<div class="container body-content">
    @RenderBody()
    <hr/>
    @Scripts.Render("~/js")
    <footer>
        <p>&copy; GoDesa Solutions @DateTime.Now.Year - Veterinaria San Francisco de Asís</p>
    </footer>
</div>

@*@Scripts.Render("~/bundles/jquery")
@Scripts.Render("~/bundles/bootstrap")*@
@RenderSection("scripts", required: false)
</body>
</html>

